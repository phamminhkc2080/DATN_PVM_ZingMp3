<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="@drawable/custom_background_quangcao"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"/>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:scaleType="fitXY"
    android:id="@+id/imBackgroundPlaylist"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    />

    <ImageView
        android:id="@+id/imPlaylist"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="6dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@id/imBackgroundPlaylist"
        android:scaleType="fitXY"/>
    <TextView
        android:textSize="13sp"
        android:text="nhung bai hit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:maxLines="1"

        android:id="@+id/tTenPlaylist"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@id/imPlaylist"
        android:layout_alignBottom="@id/imPlaylist"/>
</RelativeLayout>