<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@drawable/custom_background_quangcao"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imBackgroundQuangCao"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_alignBottom="@id/imBackgroundQuangCao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/imviewQuangCao"/>
        <TextView
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="Lo Yeu Em"
            android:layout_marginTop="5dp"
            android:id="@+id/txtTitleQuangCaobaihat"
            android:textSize="17dp"
            android:layout_toRightOf="@id/imviewQuangCao"
            android:layout_alignTop="@id/imviewQuangCao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@id/imviewQuangCao"
                android:layout_below="@id/txtTitleQuangCaobaihat"
                android:layout_marginTop="7dp">
                <TextView
                    android:id="@+id/tNoiDung"
                    android:textColor="#ffffff"
                    android:text="Chao ban da den voi ca khuc moi hay nhat hien nay aaaaaaaaaaaaaaaaaaa"
                    android:maxLines="2"
                    android:layout_marginRight="40dp"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>